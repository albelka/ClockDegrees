<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>New Project</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<form action="/" method="post">
						<label for="hour">Hours</label>
						<input type="number" name="hour" placeholder="1" max="12", min="1">
						<label for="minute">Minutes</label>
						<input type="number" name="minute" placeholder="0" max="59", min="0">
						<button type="submit" class="btn">Get the shortest segment in degrees</button>
					</form>
				</div>
			</div>
			@if (Model.Keys.Count > 0)
			{
				<div class="row">
					<div class="col-lg-6">
						<p>The shortest distance between the two hands is @Model["newClock"].FindShortestDistance() degrees</p>
					</div>
				</div>
			}
		</div>
	</body>
</html>
